<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava" />

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_toEndOf="@+id/photo"
                    android:text="fullName"
                    android:textColor="@color/colorTextBlue"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/main_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/full_name"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_toEndOf="@+id/photo"
                    android:text="mainGroup"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/birthday_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/main_group"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/photo"
                    android:background="@drawable/ic_cake_black_24dp" />

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_group"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_toEndOf="@+id/birthday_image"
                    android:text="Birthday"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/about_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/photo"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava"
                    android:text="@string/about_string"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_string"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:background="@drawable/shape_white_round"
                    android:padding="8dp"
                    android:text="text_about"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava"
                    android:text="@string/Groups"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subgroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/groups"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/margin_ava" />

                <TextView
                    android:id="@+id/contacts_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subgroups"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava"
                    android:text="@string/contacts_string"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/contacts_string"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contacts_string"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_toEndOf="@+id/phone_image"
                    android:text="Phone"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/mail_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/phone"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_mail_outline_black_24dp" />

                <TextView
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_toEndOf="@+id/mail_image"
                    android:text="Mail"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/accounts_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mail"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginTop="@dimen/margin_ava"
                    android:text="@string/accounts_string"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/accounts_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/accounts_string"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginEnd="@dimen/margin_ava"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/accounts_recycler"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"/>

                <Button
                    android:id="@+id/logOut"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_below="@+id/progress_bar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/margin_ava"
                    android:layout_marginBottom="8dp"
                    android:text="@string/Out_of_account"
                    android:textColor="@color/colorRed"
                    android:visibility="gone" />
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>