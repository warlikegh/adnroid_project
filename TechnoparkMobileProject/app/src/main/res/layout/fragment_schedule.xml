<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/text_discipline"
        android:text="Дисциплины"
        android:gravity="center_vertical"
        android:textAlignment="center">
    </TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/text_discipline"
        android:id="@+id/spinner_discipline"
        >
    </Spinner>
    <Button

        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_discipline"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:paddingTop="8dp"
        android:id="@+id/all_semestr"
        android:text="Весь семестр"
        android:textSize="12sp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_discipline"
        android:paddingTop="8dp"
        android:id="@+id/two_week"
        android:layout_toRightOf="@id/all_semestr"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:text="Ближайшие две недели"
        >
    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_semestr"
        android:layout_marginTop="11dp"
        tools:context=".ArticleFragment" />
</RelativeLayout>