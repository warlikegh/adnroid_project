<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWindow"
            android:fitsSystemWindows="true">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/main.appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/Theme.Design.Light.NoActionBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|noScroll"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/text_discipline"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/shape_blue_round"
                        android:gravity="center_vertical"
                        android:text="Дисциплины"
                        android:textAlignment="center"
                        android:textColor="@color/colorWindow"
                        android:textSize="16sp"
                        app:layout_scrollFlags="scroll|snap" />

                    <Spinner
                        android:id="@+id/spinner_discipline"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/text_discipline"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/shape_grey_round"
                        android:outlineAmbientShadowColor="@color/colorWindow"
                        app:layout_scrollFlags="scroll|snap" />

                    <Button

                        android:id="@+id/all_semester"
                        style="@style/RoundedCornerButton"
                        android:layout_width="128dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/spinner_discipline"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:paddingTop="8dp"
                        android:text="Весь семестр"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/two_week"
                        style="@style/RoundedCornerButton"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/spinner_discipline"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@id/all_semester"
                        android:paddingTop="8dp"
                        android:text="Ближайшие две недели"
                        android:textSize="12sp" />
                </RelativeLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_semester"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>