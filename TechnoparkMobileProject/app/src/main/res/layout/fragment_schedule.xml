<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_discipline"
        android:text="Дисциплины"
        android:textAlignment="center">
    </TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_discipline"
        android:id="@+id/spinner_discipline"
        >
    </Spinner>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_discipline"
        android:paddingTop="8dp"
        android:id="@+id/all_semestr"
        android:text="Весь семестр"
        android:textSize="12dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_discipline"
        android:paddingTop="8dp"
        android:id="@+id/two_week"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"
        android:text="Ближайшие две недели"
        >
    </Button>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/all_semestr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ArticleFragment"/>
</RelativeLayout>